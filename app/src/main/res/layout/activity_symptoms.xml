<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dropdown (Spinner) for selecting symptoms -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Symptom" />

    <Spinner
        android:id="@+id/symptoms_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- RatingBar for rating the selected symptom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate the Symptom (out of 5)" />

    <RatingBar
        android:id="@+id/symptom_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0" />

    <!-- Button to save the rating -->
    <Button
        android:id="@+id/save_rating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Rating" />


</LinearLayout>